<UserControl x:Class="OKr.MXReader.Client.View.Shared.AtTitle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="70" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Background="{StaticResource okr-color-title}" Height="70">
        <StackPanel VerticalAlignment="Top">
            <TextBlock x:Name="tbTitle" Text="{StaticResource okr-str-title}" Margin="12,5,0,0" Style="{StaticResource okr-title}"></TextBlock>
            <TextBlock x:Name="tbSubtitle" Text="" Margin="24,0,0,0" Style="{StaticResource okr-subtitle}" />
        </StackPanel>
    </Grid>
</UserControl>
