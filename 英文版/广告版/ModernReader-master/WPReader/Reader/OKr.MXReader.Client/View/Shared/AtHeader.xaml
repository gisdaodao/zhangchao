<UserControl x:Class="OKr.MXReader.Client.View.Shared.AtHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="58" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Background="{StaticResource okr-color-title}" Height="58">
        <TextBlock x:Name="tbTitle" Text="{StaticResource okr-str-title}" Margin="12,12,0,0" Style="{StaticResource okr-text-white}" />
        <!--<TextBlock Text="book.okr.me" HorizontalAlignment="Right" Style="{StaticResource okr-tip}" />-->
    </Grid>
</UserControl>
